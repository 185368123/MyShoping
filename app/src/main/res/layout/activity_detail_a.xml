<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="qf.com.shoping.activity.Detail_aActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_bar"
        >
        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="5dp"
            android:background="@drawable/ic_title_bar_back_gray"
            android:onClick="detail_back"
            />

    </android.support.v7.widget.Toolbar>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detail_a_list"
        android:divider="@null"
        android:clickable="false">

    </ListView>
</LinearLayout>
